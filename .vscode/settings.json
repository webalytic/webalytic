{
  "eslint.validate": [
    "typescript",
    "json",
    "javascript",
    "vue"
  ],
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src/dashboard/src"
  },
  "eslint.format.enable": true,
  "eslint.workingDirectories": [
    "./src/api-gateway",
    "./src/log-processing",
    "./src/log-collector",
    "./src/geoip",
    "./src/dashboard",
    "./src/data-storage",
    "./src/configuration",
    "./src/web-sdk"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "editor.formatOnSave": true
}