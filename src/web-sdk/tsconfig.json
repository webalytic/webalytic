{
  "compilerOptions": {
    "lib": [
      "es5",
      "es2015.promise",
      "dom",
      "es2015"
    ],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "./src/sdk/dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./node_modules/*"
  ]
}